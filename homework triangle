package javaapplication11;
import java.util.Scanner;
public class JavaApplication11 {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("أدخل ارتفاع المثلث: ");
        int n = input.nextInt();

        for (int i = 1; i <= n; i++) {
            for (int j = 0; j < i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
        
        
        
    }
    
}
